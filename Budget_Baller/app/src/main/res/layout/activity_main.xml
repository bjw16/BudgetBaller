<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="321dp"
        android:layout_height="298dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="240dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Time_Based"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="time"
            android:text="@string/Time_based" />

        <Button
            android:id="@+id/Purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="purchase"
            android:text="@string/Purchase_Cat" />

        <Button
            android:id="@+id/Stat_Analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="stat"
            android:text="@string/Stat" />

        <Button
            android:id="@+id/Budget_Goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="budget"
            android:text="@string/Budget" />

        <Button
            android:id="@+id/Trans_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="trans"
            android:text="@string/Entry" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>